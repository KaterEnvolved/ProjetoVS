def verificacao(string):
    string = string.lower()
    
    if 'a' in string:
        quant = string.count('a')
        print(f"A letra 'a' aparece {quant} vezes na palavra.")
    else:
        print("A letra 'a' n√£o foi encontrada na palavra.")

palavra= input("Digite uma palavra: ")
verificacao(palavra)
